{
    "compilerOptions": {
        /* Base Options: */
        "esModuleInterop": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "declaration": false,

        /* Strictness */
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "checkJs": true,
        "useUnknownInCatchVariables": false,

        /* Bundled projects */
        "lib": ["dom", "dom.iterable", "ES2022"],
        "noEmit": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "preserve",
        "plugins": [{ "name": "next" }],
        "incremental": true,

        /* Path Aliases */
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"],
            "@server/*": ["./src/server/*"],
            "@clients/*": ["./src/clients/*"],
            "@core/*": ["./src/core/*"],
            "@ui/*": ["./src/ui/*"]
        }
    },
    "include": ["next-env.d.ts", "src", ".next/types/**/*.ts", "sst-env.d.ts"],
    "exclude": ["node_modules"]
}
